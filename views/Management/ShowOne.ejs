<% layout('layouts/layout') %>
    <% locals.title='My Profile' %>

        <!-- 
  ROOT CONTAINER 
  - Light Theme
  - Custom Diagonal Fade Grid Background
-->
        <div class="min-h-screen w-full bg-[#f9fafb] relative overflow-y-auto">

            <!-- 1. DIAGONAL FADE GRID BACKGROUND -->
            <div class="absolute inset-0 z-0 pointer-events-none" style="
            background-image: linear-gradient(to right, #d1d5db 1px, transparent 1px), linear-gradient(to bottom, #d1d5db 1px, transparent 1px);
            background-size: 32px 32px;
            -webkit-mask-image: radial-gradient(ellipse 80% 80% at 100% 0%, black 50%, transparent 90%);
            mask-image: radial-gradient(ellipse 80% 80% at 100% 0%, black 50%, transparent 90%);
         ">
            </div>

            <!-- 2. MAIN CONTENT -->
            <main class="relative z-10 max-w-4xl mx-auto px-6 py-12">

                <!-- Back Button -->
                <div class="mb-8">
                    <a href="/manage"
                        class="inline-flex items-center gap-2 text-sm font-medium text-slate-500 hover:text-slate-900 transition-colors group">
                        <svg class="w-4 h-4 text-slate-400 group-hover:-translate-x-1 transition-transform" fill="none"
                            stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back 
                    </a>
                </div>

                <!-- Profile Card -->
                <div class="bg-white/80 backdrop-blur-xl border border-white/60 shadow-lg rounded-2xl overflow-hidden">

                    <!-- Card Header -->
                    <div
                        class="px-8 py-8 border-b border-slate-100 flex flex-col sm:flex-row items-center justify-between gap-6 bg-white/40">
                        <div class="flex items-center gap-6">
                            <!-- Avatar -->
                            <div
                                class="h-20 w-20 rounded-full bg-gradient-to-br from-slate-100 to-slate-200 border-4 border-white shadow-sm flex items-center justify-center text-slate-600 text-3xl font-bold">
                                <%= (member && member.username) ? member.username[0].toUpperCase() : 'U' %>
                            </div>

                            <!-- Name & Role -->
                            <div>
                                <h1 class="text-3xl font-bold text-slate-800 tracking-tight">
                                    <%= member.profile?.fullName || member.username %>
                                </h1>
                                <div class="flex items-center gap-3 mt-1.5">
                                    <span class="text-sm text-slate-500">
                                        <%= member.email %>
                                    </span>
                                    <span class="w-1 h-1 rounded-full bg-slate-300"></span>
                                    <span
                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-50 text-indigo-700 border border-indigo-100">
                                        <%= member.role || 'Resident' %>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Edit Button -->
                        <a href="/manage/<%= member._id %>/edit"
                            class="inline-flex items-center gap-2 px-5 py-2.5 bg-slate-900 hover:bg-slate-800 text-white text-sm font-medium rounded-xl shadow-md shadow-slate-200 transition-all hover:-translate-y-0.5">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z">
                                </path>
                            </svg>
                            Edit Profile
                        </a>
                    </div>

                    <!-- Delete Button -->
                    <% if (currUser.role==="Secretary" ) { %>
                        <form action="/manage/<%= member._id %>?_method=DELETE" method="POST" class="inline-block">
                            <button type="submit"
                                class="inline-flex items-center space-x-2 bg-white border border-rose-200 text-rose-600 hover:bg-rose-50 font-semibold py-2 px-4 rounded-lg shadow-sm transition-all duration-200"
                                onclick="return confirm('Are you sure you want to delete this member? This action cannot be undone.');">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4
                   a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                    </path>
                                </svg>
                                <span>Delete</span>
                            </button>
                        </form>
                        <% } %>


                            <!-- Card Body -->
                            <div class="p-8 bg-white/60">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                                    <!-- Full Name Field -->
                                    <div class="space-y-1">
                                        <label class="text-xs font-bold text-slate-400 uppercase tracking-wider">Full
                                            Name</label>
                                        <div
                                            class="flex items-center gap-3 p-3 rounded-xl bg-slate-50 border border-slate-200 text-slate-700 font-medium">
                                            <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z">
                                                </path>
                                            </svg>
                                            <%= member.profile?.fullName || 'Not provided' %>
                                        </div>
                                    </div>

                                    <!-- House Number Field -->
                                    <div class="space-y-1">
                                        <label class="text-xs font-bold text-slate-400 uppercase tracking-wider">House
                                            Details</label>
                                        <div
                                            class="flex items-center gap-3 p-3 rounded-xl bg-slate-50 border border-slate-200 text-slate-700 font-medium">
                                            <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6">
                                                </path>
                                            </svg>
                                            <%= member.profile?.houseNo || 'Not provided' %>
                                        </div>
                                    </div>

                                    <!-- Phone Number Field -->
                                    <div class="space-y-1">
                                        <label class="text-xs font-bold text-slate-400 uppercase tracking-wider">Phone
                                            Number</label>
                                        <div
                                            class="flex items-center gap-3 p-3 rounded-xl bg-slate-50 border border-slate-200 text-slate-700 font-medium">
                                            <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z">
                                                </path>
                                            </svg>
                                            <%= member.profile?.phone || 'Not provided' %>
                                        </div>
                                    </div>

                                </div>
                            </div>

                </div>
            </main>
        </div>