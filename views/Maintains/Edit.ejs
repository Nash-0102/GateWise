<% layout('layouts/layout') %>
<% locals.title = 'Edit Maintenance' %>

<!-- Main Content Area -->
<main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8 w-full">



    <div class="mb-6">
            <a href="/" class="inline-flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-white transition-colors group">
                <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Dashboard
            </a>
        </div>

    <!-- Form Container Card -->
    <div class="max-w-2xl mx-auto glass-card rounded-2xl overflow-hidden shadow-card-dark">
        
        <!-- Form Header -->
        <div class="p-6 md:p-8 border-b border-white/10 bg-gradient-to-r from-dark-card/50 to-transparent">
            <div class="flex items-center space-x-3 mb-2">
                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/30">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-gray-100">Edit Maintenance</h2>
            </div>
            <p class="mt-2 text-gray-400">Make your changes to the maintenance record below.</p>
        </div>

        <!-- Form Body -->
        <form action="/maintains/<%=maintainData._id%>?_method=PUT" method="post" class="p-6 md:p-8 space-y-6">
            
            <!-- Maintenance Title -->
            <div>
                <label for="title" class="block text-sm font-semibold text-gray-300 mb-2 flex items-center space-x-2">
                    <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                    </svg>
                    <span>Maintenance Title</span>
                </label>
                <input 
                    type="text" 
                    id="title"
                    name="maintainData[title]" 
                    value="<%= maintainData.title %>"
                    class="w-full px-4 py-3 bg-dark-surface/50 border border-white/10 rounded-xl text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition-all duration-300 hover:border-amber-500/30"
                    required
                >
            </div>

            <!-- Description -->
            <div>
                <label for="description" class="block text-sm font-semibold text-gray-300 mb-2 flex items-center space-x-2">
                    <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
                    </svg>
                    <span>Description</span>
                </label>
                <textarea 
                    id="description"
                    name="maintainData[description]" 
                    rows="5"
                    class="w-full px-4 py-3 bg-dark-surface/50 border border-white/10 rounded-xl text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition-all duration-300 hover:border-amber-500/30 resize-none"
                    required
                ><%= maintainData.description %></textarea>
            </div>

            <!-- Date Fields Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <!-- Scheduled Date -->
                <div>
                    <label for="scheduledDate" class="block text-sm font-semibold text-gray-300 mb-2 flex items-center space-x-2">
                        <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span>Scheduled Date</span>
                    </label>
                    <input 
                        type="date" 
                        id="scheduledDate"
                        name="maintainData[ScheduleDate]" 
                        value="<%= maintainData.ScheduleDate ? new Date(maintainData.ScheduleDate).toISOString().split('T')[0] : '' %>"
                        class="w-full px-4 py-3 bg-dark-surface/50 border border-white/10 rounded-xl text-gray-100 focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition-all duration-300 hover:border-amber-500/30"
                        required
                    >
                </div>

                <!-- Completed Date -->
                <div>
                    <label for="completedDate" class="block text-sm font-semibold text-gray-300 mb-2 flex items-center space-x-2">
                        <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>Completed Date</span>
                    </label>
                    <input 
                        type="date" 
                        id="completedDate"
                        name="maintainData[CompletedDate]" 
                        value="<%= maintainData.CompletedDate ? new Date(maintainData.CompletedDate).toISOString().split('T')[0] : '' %>"
                        class="w-full px-4 py-3 bg-dark-surface/50 border border-white/10 rounded-xl text-gray-100 focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition-all duration-300 hover:border-amber-500/30"
                        required
                    >
                </div>
            </div>

            <!-- Cost and Location Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <!-- Cost -->
                <div>
                    <label for="cost" class="block text-sm font-semibold text-gray-300 mb-2 flex items-center space-x-2">
                        <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>Cost (â‚¹)</span>
                    </label>
                    <input 
                        type="number" 
                        id="cost"
                        name="maintainData[cost]" 
                        value="<%= maintainData.cost %>"
                        min="0"
                        step="0.01"
                        class="w-full px-4 py-3 bg-dark-surface/50 border border-white/10 rounded-xl text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition-all duration-300 hover:border-amber-500/30"
                        required
                    >
                </div>

                <!-- Location -->
                <div>
                    <label for="location" class="block text-sm font-semibold text-gray-300 mb-2 flex items-center space-x-2">
                        <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span>Location</span>
                    </label>
                    <input 
                        type="text" 
                        id="location"
                        name="maintainData[location]" 
                        value="<%= maintainData.location %>"
                        class="w-full px-4 py-3 bg-dark-surface/50 border border-white/10 rounded-xl text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition-all duration-300 hover:border-amber-500/30"
                        required
                    >
                </div>
            </div>
            
            <!-- Submit Button -->
            <div class="pt-4">
                <button 
                    type="submit"
                    class="w-full neon-button bg-gradient-to-r from-amber-500 to-orange-600 hover:from-orange-600 hover:to-amber-500 text-white font-semibold py-3 px-6 rounded-xl shadow-lg shadow-amber-500/30 hover:shadow-amber-500/50 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 focus:ring-offset-dark-bg transition-all duration-300 flex items-center justify-center space-x-2"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span>Update Maintenance</span>
                </button>
            </div>
        </form>

        <!-- Back link -->
        <div class="px-6 py-4 border-t border-white/10 bg-dark-surface/50 text-center">
            <a href="/maintains/<%= maintainData._id %>" class="inline-flex items-center space-x-2 text-sm font-medium text-gray-400 hover:text-amber-400 transition-colors duration-300">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                <span>Cancel and go back</span>
            </a>
        </div>
    </div>

</main>