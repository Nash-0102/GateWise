<% layout('layouts/layout') %>
<% locals.title = notice.title %>

<!-- Main Content Area -->
<main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8 w-full">

    <div class="mb-6">
        <a href="/" class="inline-flex items-center gap-2 text-sm font-medium text-slate-500 hover:text-slate-800 transition-colors group">
            <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Dashboard
        </a>
    </div>

    <!-- Details Container Card -->
    <div class="max-w-2xl mx-auto bg-white border border-slate-200 rounded-2xl overflow-hidden shadow-sm">
        
        <!-- Card Header -->
        <div class="p-6 md:p-8 border-b border-slate-200 bg-white">
            <div class="flex items-start space-x-4">
                <div class="w-12 h-12 rounded-xl bg-indigo-600 flex items-center justify-center shadow-sm flex-shrink-0">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                </div>
                <div class="flex-1 min-w-0">
                    <h1 class="text-2xl md:text-3xl font-extrabold text-black mb-2 leading-tight">
                        <%= notice.title %>
                    </h1>
                    <div class="flex items-center space-x-2 text-sm text-gray-700 font-medium">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>Notice Details</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Card Body -->
        <div class="p-6 md:p-8 bg-white">
            
            <!-- Posted On Date -->
            <div class="mb-8">
                <div class="flex items-center space-x-2 mb-3">
                    <svg class="w-4 h-4 text-indigo-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <h4 class="text-sm font-bold text-black uppercase tracking-wider">Posted On</h4>
                </div>
                <div class="bg-gray-50 rounded-xl p-4 border border-gray-200">
                    <p class="text-black font-semibold text-lg">
                        <%= new Date(notice.createdAt).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        }) %>
                    </p>
                </div>
            </div>

            <!-- Description -->
            <div>
                <div class="flex items-center space-x-2 mb-3">
                    <svg class="w-5 h-5 text-indigo-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
                    </svg>
                    <h4 class="text-sm font-bold text-black uppercase tracking-wider">Description</h4>
                </div>
                <div class="bg-gray-50 rounded-xl p-6 border border-gray-200 shadow-sm">
                    <p class="text-black text-base leading-relaxed whitespace-pre-wrap font-medium"><%= notice.description %></p>
                </div>
            </div>
        </div>

        <!-- Card Footer with Actions -->
        <div class="px-6 py-5 border-t border-slate-100 bg-slate-50/50 flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0 gap-4">
            
            <!-- Back Link -->
            <a href="/notices" class="inline-flex items-center space-x-2 text-sm font-medium text-slate-500 hover:text-indigo-600 transition-colors duration-300">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                <span>Back to all notices</span>
            </a>

            <!-- Action Buttons -->
             <%if(currUser && currUser.role==="Secretary"){ %>
            <div class="flex items-center space-x-3">
                
                <!-- Edit Button -->
                <a 
                    href="/notice/<%= notice._id%>/edit"
                    class="inline-flex items-center space-x-2 bg-white border border-slate-200 text-slate-700 hover:bg-slate-50 font-semibold py-2 px-4 rounded-lg shadow-sm transition-all duration-200"
                >
                    <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    <span>Edit</span>
                </a>
                
                <!-- Delete Button -->
                <form action="/notice/<%= notice._id%>?_method=DELETE" method="post" class="inline-block">
                    <button 
                        type="submit"
                        class="inline-flex items-center space-x-2 bg-white border border-rose-200 text-rose-600 hover:bg-rose-50 font-semibold py-2 px-4 rounded-lg shadow-sm transition-all duration-200"
                        onclick="return confirm('Are you sure you want to delete this notice? This action cannot be undone.');"
                    >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        <span>Delete</span>
                    </button>
                </form>

            </div>
            <% } %> 
        </div>
    </div>

</main>
