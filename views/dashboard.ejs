<% layout('layouts/layout') %>
<% locals.title = 'Dashboard' %>

<!-- Main Content Area -->
<main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8 w-full">
    
    <!-- 
      UPDATED PAGE HEADER
      - Flexbox layout
    -->
    <header class="mb-8 pt-4 flex flex-col md:flex-row md:items-end justify-between gap-6">
        
        <!-- Left: Welcome Text -->
        <div class="flex flex-col space-y-1">
            <h1 class="text-3xl font-bold tracking-tight text-slate-900">
                Welcome back, <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600"><%= currUser.username %></span>
            </h1>
            <p class="text-slate-500 text-base max-w-2xl">
                Here is an overview of recent alerts, maintenance schedules, and community notices.
            </p>
        </div>

        <!-- Right: TODAY'S EVENT WIDGET -->
        <a href="/event" class="block">
            <div class="hidden md:flex items-center gap-4 bg-white border border-slate-200 rounded-2xl p-3 pr-6 shadow-sm hover:shadow-md transition-shadow">
                
                <!-- Date Block -->
                <div class="bg-blue-50 border border-blue-100 rounded-xl px-4 py-2 text-center min-w-[70px]">
                    <span class="block text-[10px] text-blue-600 font-bold uppercase tracking-wider">
                        <%= new Date().toLocaleDateString('en-US', { month: 'short' }) %>
                    </span>
                    <span class="block text-2xl font-bold text-slate-800 leading-none mt-0.5">
                        <%= new Date().getDate() %>
                    </span>
                </div>
                
                <!-- Event Info Block -->
                <div>
                    <p class="text-[10px] text-slate-400 uppercase tracking-wide font-bold mb-1">Today's Schedule</p>
                    
                    <% if (todaysEvents && todaysEvents.length > 0) { %>
                        <div class="group flex items-center gap-2.5">
                            <span class="relative flex h-2.5 w-2.5">
                              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                              <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-emerald-500"></span>
                            </span>
                            <div>
                                <p class="text-sm font-bold text-slate-700 group-hover:text-blue-600 transition-colors truncate max-w-[150px]">
                                    <%= todaysEvents[0].title %>
                                </p>
                                <% if (todaysEvents.length > 1) { %>
                                    <p class="text-[10px] text-slate-400 font-medium">+<%= todaysEvents.length - 1 %> more</p>
                                <% } %>
                            </div>
                        </div>
                    <% } else { %>
                        <!-- Empty State -->
                        <div class="flex items-center gap-2.5">
                            <span class="h-2.5 w-2.5 rounded-full bg-slate-200"></span>
                            <span class="text-sm text-slate-400 font-medium">No events scheduled</span>
                        </div>
                    <% } %>
                </div>
            </div>
        </a>

    </header>

    <!-- Dashboard Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6">

        <!-- SECTION 1: ALERTS (Left Column) -->
        <section class="bg-white border border-slate-200 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow flex flex-col md:col-span-2 lg:col-span-2 lg:row-span-2">
            <div class="px-6 py-5 border-b border-rose-100 flex items-center justify-between bg-gradient-to-r from-rose-50/80 to-white">
                <div class="flex items-center gap-3">
                    <div class="p-2 rounded-md bg-white border border-rose-100 text-rose-500 shadow-sm">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path></svg>
                    </div>
                    <h2 class="text-lg font-semibold text-slate-800">Community Alerts</h2>
                </div>
                <a href="/alerts" class="text-xs font-medium text-rose-600 hover:text-rose-700 transition-colors">View All</a>
            </div>
            <div class="p-0 flex-1 overflow-y-auto">
                <% if (recentAlerts && recentAlerts.length > 0) { %>
                    <ul class="divide-y divide-slate-100">
                        <% recentAlerts.forEach(a => { %>
                            <li>
                                <a href="/alerts/<%= a._id %>" class="block px-6 py-5 hover:bg-slate-50 transition-colors group">
                                    <div class="flex justify-between items-start gap-4">
                                        <div class="flex-1 min-w-0 space-y-1">
                                            <div class="flex items-center gap-2">
                                                <p class="text-sm font-medium text-slate-800 group-hover:text-blue-600 transition-colors truncate">
                                                    <%= a.title %>
                                                </p>
                                                <% if (a.level === 'High') { %>
                                                    <span class="w-1.5 h-1.5 rounded-full bg-rose-500"></span>
                                                <% } %>
                                            </div>
                                            <% if (a.description) { %>
                                                <p class="text-xs text-slate-500 line-clamp-2 leading-relaxed">
                                                    <%= a.description %>
                                                </p>
                                            <% } %>
                                        </div>
                                        <span class="px-2 py-1 rounded text-[10px] font-medium border 
                                            <%= a.level === 'High' ? 'bg-rose-50 border-rose-100 text-rose-600' : 
                                               (a.level === 'Medium' ? 'bg-amber-50 border-amber-100 text-amber-600' : 
                                               'bg-emerald-50 border-emerald-100 text-emerald-600') %>">
                                            <%= a.level %>
                                        </span>
                                    </div>
                                </a>
                            </li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <div class="h-full flex flex-col items-center justify-center text-slate-400 p-6">
                        <p class="text-sm">No active alerts</p>
                    </div>
                <% } %>
            </div>
        </section>

        <!-- SECTION 2: MAINTENANCE (Top Right) -->
        <section class="bg-white border border-slate-200 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow flex flex-col md:col-span-1 lg:col-span-1">
            <div class="px-5 py-4 border-b border-blue-100 flex items-center justify-between bg-gradient-to-r from-blue-50/80 to-white">
                <div class="flex items-center gap-2">
                    <div class="p-1.5 rounded-md bg-white border border-blue-100 text-blue-500 shadow-sm">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    </div>
                    <h2 class="text-sm font-semibold text-slate-800">Maintenance</h2>
                </div>
            </div>
            <div class="p-0 flex-1">
                <% if (recentMaintenance && recentMaintenance.length > 0) { %>
                    <ul class="divide-y divide-slate-100">
                        <% recentMaintenance.forEach(m => { %>
                            <li>
                                <a href="/maintainance/<%= m._id %>" class="block px-5 py-3 hover:bg-slate-50 transition-colors group">
                                    <div class="flex justify-between items-center">
                                        <span class="text-sm text-slate-700 group-hover:text-blue-600 font-medium truncate"><%= m.title %></span>
                                        <span class="text-xs font-bold text-blue-600 bg-blue-50 px-2 py-0.5 rounded-full">â‚¹<%= m.cost %></span>
                                    </div>
                                    <div class="flex items-center gap-1 mt-1 text-xs text-slate-400">
                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                        <%= m.location %>
                                    </div>
                                </a>
                            </li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p class="text-xs text-slate-400 text-center py-6">No records</p>
                <% } %>
            </div>
             <div class="px-5 py-3 border-t border-slate-100 bg-slate-50/50">
                <a href="/maintains" class="block text-center text-xs font-medium text-blue-600 hover:text-blue-700 transition-colors">View All</a>
            </div>
        </section>

        <!-- SECTION 3: COMPLAINTS (Top Right) -->
        <section class="bg-white border border-slate-200 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow flex flex-col md:col-span-1 lg:col-span-1">
            <div class="px-5 py-4 border-b border-amber-100 flex items-center justify-between bg-gradient-to-r from-amber-50/80 to-white">
                 <div class="flex items-center gap-2">
                    <div class="p-1.5 rounded-md bg-white border border-amber-100 text-amber-500 shadow-sm">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                    </div>
                    <h2 class="text-sm font-semibold text-slate-800">Complaints</h2>
                </div>
            </div>
            <div class="p-0 flex-1">
                <% if (recentComplaints && recentComplaints.length > 0) { %>
                    <ul class="divide-y divide-slate-100">
                        <% recentComplaints.forEach(c => { %>
                            <li>
                                <a href="/complaints/<%= c._id %>" class="block px-5 py-3 hover:bg-slate-50 transition-colors group">
                                    <div class="flex justify-between items-start">
                                        <span class="text-sm text-slate-700 group-hover:text-amber-600 font-medium truncate max-w-[60%]"><%= c.title %></span>
                                        <span class="text-[10px] uppercase tracking-wide font-bold
                                            <%= c.status === 'Resolved' ? 'text-emerald-600 bg-emerald-50 px-1.5 py-0.5 rounded' : 
                                            (c.status === 'Pending' ? 'text-amber-600 bg-amber-50 px-1.5 py-0.5 rounded' : 
                                            'text-rose-600 bg-rose-50 px-1.5 py-0.5 rounded') %>">
                                            <%= c.status %>
                                        </span>
                                    </div>
                                </a>
                            </li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p class="text-xs text-slate-400 text-center py-6">No complaints</p>
                <% } %>
            </div>
             <div class="px-5 py-3 border-t border-slate-100 bg-slate-50/50">
                <a href="/complaints" class="block text-center text-xs font-medium text-amber-600 hover:text-amber-700 transition-colors">View All</a>
            </div>
        </section>

        <!-- SECTION 4: NOTICES (Bottom Right Wide) -->
        <section class="bg-white border border-slate-200 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow md:col-span-2 lg:col-span-2">
            <div class="px-6 py-5 border-b border-indigo-100 flex items-center justify-between bg-gradient-to-r from-indigo-50/80 to-white">
                <div class="flex items-center gap-3">
                    <div class="p-2 rounded-md bg-white border border-indigo-100 text-indigo-500 shadow-sm">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                    </div>
                    <h2 class="text-lg font-semibold text-slate-800">Notice Board</h2>
                </div>
                 <a href="/notices" class="text-xs font-medium text-indigo-600 hover:text-indigo-700 transition-colors">View All</a>
            </div>
            <div class="p-0">
                <% if (recentNotices && recentNotices.length > 0) { %>
                    <div class="divide-y divide-slate-100">
                        <% recentNotices.forEach(n => { %>
                            <a href="/notice/<%= n._id %>" class="block px-6 py-4 hover:bg-slate-50 transition-colors group">
                                <div class="flex items-center justify-between">
                                    <div class="space-y-1">
                                        <p class="text-sm font-medium text-slate-700 group-hover:text-indigo-600 transition-colors"><%= n.title %></p>
                                        <% if (n.description) { %>
                                            <p class="text-xs text-slate-500 line-clamp-1"><%= n.description %></p>
                                        <% } %>
                                    </div>
                                    <svg class="w-4 h-4 text-slate-400 group-hover:text-slate-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                                </div>
                            </a>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p class="text-sm text-slate-400 text-center py-8">No active notices</p>
                <% } %>
            </div>
        </section>

    </div> 

</main>
