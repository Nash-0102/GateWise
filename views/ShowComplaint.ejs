<% layout('layouts/layout') %>
<% locals.title = comp.title %>

<!-- Main Content Area -->
<main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8 w-full">



    <div class="mb-6">
            <a href="/" class="inline-flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-white transition-colors group">
                <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Dashboard
            </a>
        </div>

    <!-- Details Container Card -->
    <div class="max-w-2xl mx-auto glass-card rounded-2xl overflow-hidden shadow-card-dark">
        
        <!-- Card Header -->
        <div class="p-6 md:p-8 border-b border-white/10 bg-gradient-to-r from-dark-card/50 to-transparent">
            <div class="flex items-start space-x-4">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-neon-teal to-teal-600 flex items-center justify-center shadow-lg shadow-neon-teal/30 flex-shrink-0">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <div class="flex-1 min-w-0">
                    <h1 class="text-3xl font-bold text-gray-100 mb-2">
                        <%= comp.title %>
                    </h1>
                    <div class="flex items-center space-x-2 text-sm text-gray-400">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>Complaint Details</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Card Body -->
        <div class="p-6 md:p-8">
            
            <!-- Meta Info Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
                <!-- Submitted By -->
                <div class="glass-card rounded-xl p-4 border border-white/10">
                    <div class="flex items-center space-x-2 mb-2">
                        <svg class="w-4 h-4 text-neon-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <h4 class="text-xs font-semibold text-gray-400 uppercase tracking-wider">
                            Submitted By
                        </h4>
                    </div>
                    <p class="text-gray-200 text-base font-semibold">
                        <%= comp.user %>
                    </p>
                </div>
                
                <!-- Submitted On -->
                <div class="glass-card rounded-xl p-4 border border-white/10">
                    <div class="flex items-center space-x-2 mb-2">
                        <svg class="w-4 h-4 text-neon-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <h4 class="text-xs font-semibold text-gray-400 uppercase tracking-wider">
                            Submitted On
                        </h4>
                    </div>
                    <p class="text-gray-200 text-base">
                        <%= new Date(comp.createdAt).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        }) %>
                    </p>
                </div>
            </div>

            <!-- Status -->
            <div class="mb-6">
                <div class="flex items-center space-x-2 mb-3">
                    <svg class="w-4 h-4 text-neon-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <h4 class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Status</h4>
                </div>
                <span class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-semibold
                    <%= comp.status === 'Resolved' ? 'bg-green-500/20 text-green-400 border border-green-500/30' : (comp.status === 'Pending' ? 'bg-yellow-500/20 text-yellow-400 border border-yellow-500/30' : 'bg-red-500/20 text-red-400 border border-red-500/30') %>">
                    <%= comp.status %>
                </span>
            </div>

            <!-- Description -->
            <div>
                <div class="flex items-center space-x-2 mb-3">
                    <svg class="w-5 h-5 text-neon-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
                    </svg>
                    <h4 class="text-sm font-semibold text-gray-400 uppercase tracking-wider">Description</h4>
                </div>
                <div class="glass-card rounded-xl p-5 border border-white/10">
                    <p class="text-gray-200 text-base leading-relaxed whitespace-pre-wrap"><%= comp.description %></p>
                </div>
            </div>
        </div>

        <!-- Card Footer with Actions -->
        <div class="px-6 py-5 border-t border-white/10 bg-dark-surface/50 flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0 gap-4">
            
            <!-- Back Link -->
            <a href="/complaints" class="inline-flex items-center space-x-2 text-sm font-medium text-gray-400 hover:text-neon-teal transition-colors duration-300">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                <span>Back to all complaints</span>
            </a>

            <!-- Action Buttons -->
            <div class="flex items-center space-x-3">
                
                <!-- Edit Button -->
                <a 
                    href="/complaints/<%= comp._id %>/edit"
                    class="inline-flex items-center space-x-2 bg-gradient-to-r from-neon-blue to-neon-violet hover:from-neon-violet hover:to-neon-blue text-white font-semibold py-2.5 px-5 rounded-xl shadow-lg shadow-neon-blue/30 hover:shadow-neon-violet/50 transition-all duration-300"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    <span>Edit</span>
                </a>
                
                <!-- Delete Button -->
                <form method="post" action="/complaints/<%=comp._id%>?_method=delete" class="inline-block">
                    <button 
                        type="submit"
                        class="inline-flex items-center space-x-2 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-600 text-white font-semibold py-2.5 px-5 rounded-xl shadow-lg shadow-red-600/30 hover:shadow-red-600/50 transition-all duration-300"
                        onclick="return confirm('Are you sure you want to delete this complaint? This action cannot be undone.');"
                    >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        <span>Delete</span>
                    </button>
                </form>

            </div>
        </div>
    </div>

</main>