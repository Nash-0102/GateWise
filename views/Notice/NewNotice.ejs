<% layout('layouts/layout') %>
<% locals.title = 'Create Notice' %>

<!-- Main Content Area -->
<main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8 w-full">




    <div class="mb-6">
            <a href="/" class="inline-flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-white transition-colors group">
                <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Dashboard
            </a>
        </div>

    <!-- Form Container Card -->
    <div class="max-w-2xl mx-auto glass-card rounded-2xl overflow-hidden shadow-card-dark">
        
        <!-- Form Header -->
        <div class="p-6 md:p-8 border-b border-white/10 bg-gradient-to-r from-dark-card/50 to-transparent">
            <div class="flex items-center space-x-3 mb-2">
                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-neon-violet to-purple-600 flex items-center justify-center shadow-lg shadow-neon-violet/30">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-gray-100">Create New Notice</h2>
            </div>
            <p class="mt-2 text-gray-400">Fill in the details for the new notice below.</p>
        </div>

        <!-- Form Body -->
        <form action="/notice" method="post" class="p-6 md:p-8 space-y-6">
            
            <!-- Notice Title -->
            <div>
                <label for="title" class="block text-sm font-semibold text-gray-300 mb-2 flex items-center space-x-2">
                    <svg class="w-4 h-4 text-neon-violet" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                    </svg>
                    <span>Notice Title</span>
                </label>
                <input 
                    type="text" 
                    id="title"
                    name="notice[title]" 
                    placeholder="e.g., Monthly Society Meeting Announcement"
                    class="w-full px-4 py-3 bg-dark-surface/50 border border-white/10 rounded-xl text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-neon-violet/50 focus:border-neon-violet/50 transition-all duration-300 hover:border-neon-violet/30"
                    required
                >
            </div>

            <!-- Notice Description -->
            <div>
                <label for="description" class="block text-sm font-semibold text-gray-300 mb-2 flex items-center space-x-2">
                    <svg class="w-4 h-4 text-neon-violet" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
                    </svg>
                    <span>Description</span>
                </label>
                <textarea 
                    id="description"
                    name="notice[description]" 
                    rows="8"
                    placeholder="Enter the full notice description. Include all relevant details, dates, times, and any important information for residents..."
                    class="w-full px-4 py-3 bg-dark-surface/50 border border-white/10 rounded-xl text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-neon-violet/50 focus:border-neon-violet/50 transition-all duration-300 hover:border-neon-violet/30 resize-none"
                    required
                ></textarea>
            </div>
            
            <!-- Submit Button -->
            <div class="pt-4">
                <button 
                    type="submit"
                    class="w-full neon-button bg-gradient-to-r from-neon-violet to-purple-600 hover:from-purple-600 hover:to-neon-violet text-white font-semibold py-3 px-6 rounded-xl shadow-lg shadow-neon-violet/30 hover:shadow-neon-violet/50 focus:outline-none focus:ring-2 focus:ring-neon-violet focus:ring-offset-2 focus:ring-offset-dark-bg transition-all duration-300 flex items-center justify-center space-x-2"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    <span>Submit Notice</span>
                </button>
            </div>
        </form>

        <!-- Back link -->
        <div class="px-6 py-4 border-t border-white/10 bg-dark-surface/50 text-center">
            <a href="/notices" class="inline-flex items-center space-x-2 text-sm font-medium text-gray-400 hover:text-neon-violet transition-colors duration-300">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                <span>Cancel and go back to notices</span>
            </a>
        </div>
    </div>

</main>