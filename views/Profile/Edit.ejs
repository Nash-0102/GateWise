<% layout('layouts/layout') %>
<% locals.title = 'Edit Profile' %>

<div class="min-h-screen bg-slate-950 p-6 lg:p-10 flex justify-center">
    <div class="w-full max-w-2xl">

        <!-- 1. Back Button -->
        <div class="mb-8">
            <a href="/profile" class="inline-flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-white transition-colors group">
                <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Cancel & Back to Profile
            </a>
        </div>

        <!-- 2. Edit Form Card -->
        <div class="bg-slate-900/50 backdrop-blur-xl border border-white/10 shadow-2xl rounded-2xl overflow-hidden">
            
            <!-- Header -->
            <div class="px-8 py-6 border-b border-white/10 bg-white/[0.02]">
                <h1 class="text-2xl font-bold text-white tracking-tight">Edit Profile</h1>
                <p class="text-sm text-slate-400 mt-1">Update your personal information below.</p>
            </div>

            <!-- Form -->
            <form action="/profile/<%= info._id %>?_method=PUT" method="POST" class="p-8 space-y-6">
                
                <!-- Full Name -->
                <div>
                    <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-2">
                        Full Name
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                        </div>
                        <input type="text" name="fullName" 
                            value="<%= info.profile?.fullName || '' %>"
                            placeholder="e.g. Rahul Sharma"
                            class="block w-full rounded-xl border border-white/10 bg-slate-950/50 text-white pl-10 pr-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500/50 focus:border-indigo-500 placeholder-slate-600 transition-all sm:text-sm">
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    
                    <!-- House Details -->
                    <div>
                        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-2">
                            House Number / Details
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>
                            </div>
                            <input type="text" name="houseNo" 
                                value="<%= info.profile?.houseNo || '' %>"
                                placeholder="e.g. A-402, Gokuldham"
                                class="block w-full rounded-xl border border-white/10 bg-slate-950/50 text-white pl-10 pr-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500/50 focus:border-indigo-500 placeholder-slate-600 transition-all sm:text-sm">
                        </div>
                    </div>

                    <!-- Phone Number -->
                    <div>
                        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-2">
                            Phone Number
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                            </div>
                            <input type="number" name="phone" 
                                value="<%= info.profile?.phone || '' %>"
                                placeholder="e.g. 9876543210"
                                class="block w-full rounded-xl border border-white/10 bg-slate-950/50 text-white pl-10 pr-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500/50 focus:border-indigo-500 placeholder-slate-600 transition-all sm:text-sm">
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="pt-6 border-t border-white/5 flex items-center justify-end gap-4">
                    <a href="/profile" class="px-5 py-2.5 rounded-lg text-sm font-medium text-slate-400 hover:text-white hover:bg-white/5 transition-all">
                        Cancel
                    </a>
                    <button type="submit" class="px-6 py-2.5 bg-indigo-600 hover:bg-indigo-500 text-white text-sm font-semibold rounded-lg shadow-lg shadow-indigo-500/20 transition-all hover:-translate-y-0.5 border border-indigo-500/50">
                        Save Changes
                    </button>
                </div>

            </form>
        </div>

    </div>
</div>