<% layout('layouts/layout') %>
<% locals.title = 'All Alerts' %>

<!-- Main Content Area -->
<main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8 w-full">

    <div class="mb-6">
        <a href="/" class="inline-flex items-center gap-2 text-sm font-medium text-slate-500 hover:text-slate-800 transition-colors group">
            <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Dashboard
        </a>
    </div>

    <!-- Page Header & Action Button -->
    <header class="mb-10 flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div class="flex items-center space-x-3 mb-4 sm:mb-0">
            <div class="w-12 h-12 rounded-xl bg-rose-600 flex items-center justify-center shadow-sm">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
            <div>
                <h1 class="text-4xl font-extrabold text-black">
                    All Alerts
                </h1>
                <p class="mt-1 text-gray-600 font-medium text-lg">Here is a list of all active and past alerts for the society.</p>
            </div>
        </div>
        
        <!-- Create Alert Button -->
         <%if(currUser && currUser.role==="Secretary"){ %>
        <div class="flex-shrink-0">
            <form action="/alerts/new" method="get">
                <button 
                    type="submit"
                    class="bg-rose-600 hover:bg-rose-700 text-white font-bold py-3 px-6 rounded-xl shadow-sm hover:shadow-md focus:outline-none focus:ring-2 focus:ring-rose-600 focus:ring-offset-2 transition-all duration-200 flex items-center space-x-2"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    <span>Create New Alert</span>
                </button>
            </form>
        </div>
        <% } %> 
    </header>

    <!-- Alerts List Container Card -->
    <div class="bg-white border border-slate-200 rounded-2xl overflow-hidden shadow-sm">
        
        <!-- List -->
        <ul class="divide-y divide-slate-100">
            
            <% if(allalerts && allalerts.length > 0) { %>
                
                <% for(let Alert of allalerts){ %>
                    <li class="group">
                        <a href="/alerts/<%= Alert._id%>" class="block p-6 hover:bg-slate-50 transition-all duration-200 border-l-4 border-transparent hover:border-rose-500">
                            <div class="flex items-start justify-between gap-4">
                                <div class="flex-1 min-w-0">
                                    <!-- Alert Icon & Title -->
                                    <div class="flex items-start space-x-4">
                                        <div class="w-10 h-10 rounded-lg bg-rose-50 border border-rose-100 flex items-center justify-center flex-shrink-0 group-hover:bg-rose-100 transition-colors">
                                            <svg class="w-5 h-5 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                                            </svg>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <h3 class="text-lg font-bold text-black group-hover:text-rose-700 transition-colors truncate">
                                                <%= Alert.title %>
                                            </h3>
                                            <% if (Alert.description) { %>
                                                <p class="mt-2 text-sm text-gray-700 font-medium line-clamp-2">
                                                    <%= Alert.description %>
                                                </p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Go to arrow -->
                                <div class="flex-shrink-0 flex items-center">
                                    <svg class="w-5 h-5 text-gray-400 group-hover:text-rose-600 transform group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </div>
                            </div>
                        </a>
                    </li>
                <% } %>

            <% } else { %>
                <!-- Empty State -->
                <li class="p-12 text-center">
                    <div class="w-16 h-16 rounded-full bg-slate-50 border border-slate-100 flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    </div>
                    <h4 class="text-xl font-bold text-black mb-2">No Alerts Found</h4>
                    <p class="text-gray-600 font-medium mb-6">Click "Create New Alert" to add the first one.</p>
                    <%if(currUser && currUser.role==="Secretary"){ %>
                    <form action="/alerts/new" method="get" class="inline-block">
                        <button type="submit" class="bg-rose-600 hover:bg-rose-700 text-white font-bold py-2 px-5 rounded-lg shadow-sm transition-all duration-200">
                            Create Your First Alert
                        </button>
                    </form>
                    <% } %> 
                </li>
            <% } %>

        </ul>
    </div>

</main>
