<% layout('layouts/layout') %>
<% locals.title = 'My Profile' %>

<div class="min-h-screen bg-slate-950 p-6 lg:p-10">
    <div class="max-w-3xl mx-auto">

        <!-- 1. Back Button -->
        <div class="mb-8">
            <a href="/" class="inline-flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-white transition-colors group">
                <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Dashboard
            </a>
        </div>

        <!-- 2. Profile Card -->
        <div class="bg-slate-900/50 backdrop-blur-xl border border-white/10 shadow-xl rounded-2xl overflow-hidden">
            
            <!-- Card Header: Avatar & Edit Button -->
            <div class="px-8 py-8 border-b border-white/10 flex flex-col sm:flex-row items-center justify-between gap-6 bg-white/[0.02]">
                <div class="flex items-center gap-5">
                    <!-- Avatar Placeholder -->
                    <div class="h-20 w-20 rounded-2xl bg-indigo-500/20 border border-indigo-500/30 flex items-center justify-center text-indigo-400 text-3xl font-bold shadow-lg shadow-indigo-500/10">
                        <%= (info && info.username) ? info.username[0].toUpperCase() : 'U' %>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-white tracking-tight"><%= info.username %></h1>
                        <p class="text-sm text-slate-400"><%= info.email %></p>
                        <span class="inline-flex items-center mt-2 px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-500/10 text-indigo-300 border border-indigo-500/20">
                            <%= info.role || 'Resident' %>
                        </span>
                    </div>
                </div>

                <!-- Edit Button -->
                <a href="/profile/<%= info._id %>/edit" class="inline-flex items-center gap-2 px-5 py-2.5 bg-indigo-600 hover:bg-indigo-500 text-white text-sm font-medium rounded-xl shadow-lg shadow-indigo-500/20 transition-all hover:-translate-y-0.5 border border-indigo-500/50">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
                    Edit Profile
                </a>
            </div>

            <!-- Card Body: Details Grid -->
            <div class="p-8">
                <div class="grid grid-cols-1 gap-6">
                    
                    <!-- Full Name -->
                    <div>
                        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-2">Full Name</label>
                        <input type="text" readonly 
                            value="<%= info.profile?.fullName || 'Not provided' %>" 
                            class="block w-full rounded-xl border-white/10 bg-slate-950/50 text-slate-300 px-4 py-3 focus:ring-0 focus:border-white/20 cursor-default shadow-sm text-sm placeholder-slate-600">
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- House Details -->
                        <div>
                            <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-2">House Details</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>
                                </div>
                                <input type="text" readonly 
                                    value="<%= info.profile?.houseNo || 'Not provided' %>" 
                                    class="block w-full rounded-xl border-white/10 bg-slate-950/50 text-slate-300 pl-10 pr-4 py-3 focus:ring-0 focus:border-white/20 cursor-default shadow-sm text-sm placeholder-slate-600">
                            </div>
                        </div>

                        <!-- Phone Number -->
                        <div>
                            <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-2">Phone Number</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                                </div>
                                <input type="text" readonly 
                                    value="<%= info.profile?.phone || 'Not provided' %>" 
                                    class="block w-full rounded-xl border-white/10 bg-slate-950/50 text-slate-300 pl-10 pr-4 py-3 focus:ring-0 focus:border-white/20 cursor-default shadow-sm text-sm placeholder-slate-600">
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>