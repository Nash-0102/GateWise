<% layout('layouts/layout') %>
<% locals.title = 'All Notices' %>

<!-- Main Content Area -->
<main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8 w-full">

    <div class="mb-6">
        <a href="/" class="inline-flex items-center gap-2 text-sm font-medium text-slate-500 hover:text-slate-800 transition-colors group">
            <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Dashboard
        </a>
    </div>

    <!-- Page Header & Action Button -->
    <header class="mb-10 flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div class="flex items-center space-x-3 mb-4 sm:mb-0">
            <div class="w-12 h-12 rounded-xl bg-indigo-600 flex items-center justify-center shadow-sm">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
            </div>
            <div>
                <h1 class="text-4xl font-extrabold text-black">
                    All Notices
                </h1>
                <p class="mt-1 text-gray-600 font-medium text-lg">Official notices and announcements from the society management.</p>
            </div>
        </div>
        
        <!-- Create Notice Button -->
         <%if(currUser && currUser.role==="Secretary"){ %>
        <div class="flex-shrink-0">
            <form action="/notice/new" method="get">
                <button 
                    type="submit"
                    class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-xl shadow-sm hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2 transition-all duration-200 flex items-center space-x-2"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    <span>Create New Notice</span>
                </button>
            </form>
        </div>
        <% } %> 
    </header>

    <!-- Notices List Container Card -->
    <div class="bg-white border border-slate-200 rounded-2xl overflow-hidden shadow-sm">
        
        <!-- List -->
        <ul class="divide-y divide-slate-100">
            
            <% if(allNotices && allNotices.length > 0) { %>
                
                <% for(let notice of allNotices){ %>
                    <li class="group">
                        <a href="/notice/<%= notice._id%>" class="block p-6 hover:bg-slate-50 transition-all duration-200 border-l-4 border-transparent hover:border-indigo-500">
                            <div class="flex items-start justify-between gap-4">
                                <div class="flex-1 min-w-0">
                                    <!-- Notice Icon & Title -->
                                    <div class="flex items-start space-x-4">
                                        <div class="w-10 h-10 rounded-lg bg-indigo-50 border border-indigo-100 flex items-center justify-center flex-shrink-0 group-hover:bg-indigo-100 transition-colors">
                                            <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <h3 class="text-lg font-bold text-black group-hover:text-indigo-700 transition-colors truncate">
                                                <%= notice.title %>
                                            </h3>
                                            <% if (notice.description) { %>
                                                <p class="mt-2 text-sm text-gray-700 font-medium line-clamp-2">
                                                    <%= notice.description %>
                                                </p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Go to arrow -->
                                <div class="flex-shrink-0 flex items-center">
                                    <svg class="w-5 h-5 text-gray-400 group-hover:text-indigo-600 transform group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </div>
                            </div>
                        </a>
                    </li>
                <% } %>

            <% } else { %>
                <!-- Empty State -->
                <li class="p-12 text-center">
                    <div class="w-16 h-16 rounded-full bg-slate-50 border border-slate-100 flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                    </div>
                    <h4 class="text-xl font-bold text-black mb-2">No Notices Found</h4>
                    <p class="text-gray-600 font-medium mb-6">Click "Create New Notice" to add the first one.</p>
                    <form action="/notice/new" method="get" class="inline-block">
                        <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-5 rounded-lg shadow-sm transition-all duration-200">
                            Create Your First Notice
                        </button>
                    </form>
                </li>
            <% } %>

        </ul>
    </div>

</main>
