<% layout('layouts/layout') %>
<% locals.title = 'Contact Us' %>

<!-- Wrapper for specific dark theme background (Matching About Page) -->
<div class="bg-slate-950 text-slate-300 selection:bg-blue-500/30 selection:text-blue-200 min-h-screen flex flex-col">
    
    <!-- 
      SECTION 1: HERO
      Style: Deep gradient, centered text, abstract background 
    -->
    <div class="relative isolate overflow-hidden pt-14 pb-12 sm:pb-16">
        <!-- Abstract Background Mesh -->
        <div class="absolute inset-0 -z-10 h-full w-full bg-slate-950">
            <div class="absolute inset-0 bg-[radial-gradient(#3b82f622_1px,transparent_1px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)] opacity-20"></div>
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[400px] bg-blue-500/10 blur-[100px] rounded-full pointer-events-none"></div>
        </div>

        <div class="mx-auto max-w-7xl px-6 lg:px-8 text-center">
            <div class="mx-auto max-w-2xl">
                <div class="mb-8 flex justify-center">
                    <div class="relative rounded-full px-3 py-1 text-sm leading-6 text-slate-400 ring-1 ring-white/10 hover:ring-white/20 transition-all cursor-default">
                        Weâ€™d love to hear from you
                    </div>
                </div>
                <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">
                    Get in touch
                </h1>
                <p class="mt-6 text-lg leading-8 text-slate-400">
                    Have a question about features, pricing, or need support? Our team is ready to help.
                </p>
            </div>
        </div>
    </div>

    <!-- 
      SECTION 2: MAIN CONTENT (Grid)
    -->
    <main class="flex-grow px-6 lg:px-8 pb-24">
        <div class="mx-auto max-w-7xl">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-x-12 gap-y-12 lg:gap-y-0">
                
                <!-- LEFT COLUMN: Contact Info & Context -->
                <div class="flex flex-col justify-between">
                    <div class="space-y-8">
                        
                        <!-- Info Card 1 -->
                        <div class="relative pl-16">
                            <dt class="text-base font-semibold leading-7 text-white">
                                <div class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-blue-500/10 ring-1 ring-blue-500/20">
                                    <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>
                                </div>
                                Chat with us
                            </dt>
                            <dd class="mt-2 text-base leading-7 text-slate-400">
                                Speak to our friendly team via email.<br>
                                <a href="mailto:support@gatewise.com" class="text-blue-400 hover:text-blue-300 transition-colors">support@gatewise.com</a>
                            </dd>
                        </div>

                        <!-- Info Card 2 -->
                        <div class="relative pl-16">
                            <dt class="text-base font-semibold leading-7 text-white">
                                <div class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-purple-500/10 ring-1 ring-purple-500/20">
                                    <svg class="h-6 w-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" /></svg>
                                </div>
                                Call support
                            </dt>
                            <dd class="mt-2 text-base leading-7 text-slate-400">
                                Mon-Fri from 8am to 5pm.<br>
                                <a href="tel:+919876543210" class="text-purple-400 hover:text-purple-300 transition-colors">+91 (987) 654-3210</a>
                            </dd>
                        </div>

                        <!-- Info Card 3 -->
                        <div class="relative pl-16">
                            <dt class="text-base font-semibold leading-7 text-white">
                                <div class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-emerald-500/10 ring-1 ring-emerald-500/20">
                                    <svg class="h-6 w-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" /></svg>
                                </div>
                                Visit us
                            </dt>
                            <dd class="mt-2 text-base leading-7 text-slate-400">
                                123 Tech Park, Cyber City,<br>
                                Gurugram, India 122002
                            </dd>
                        </div>
                    </div>

                    <!-- Social Links -->
                    <div class="mt-12 flex gap-x-6">
                         <a href="#" class="text-slate-400 hover:text-white transition-colors">
                            <span class="sr-only">GitHub</span>
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" /></svg>
                        </a>
                        <a href="#" class="text-slate-400 hover:text-white transition-colors">
                            <span class="sr-only">Twitter</span>
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" /></svg>
                        </a>
                    </div>
                </div>

                <!-- RIGHT COLUMN: Contact Form -->
                <div class="bg-white/[0.02] ring-1 ring-white/5 rounded-3xl p-8 sm:p-10 backdrop-blur-sm">
                    <h2 class="text-2xl font-bold tracking-tight text-white mb-6">Send us a message</h2>
                    <form action="/contact" method="post" class="space-y-6">
                        
                        <!-- Name -->
                        <div>
                            <label for="name" class="block text-sm font-medium leading-6 text-white">Name</label>
                            <div class="mt-2">
                                <input type="text" name="contact[name]" id="name" autocomplete="name" required
                                    class="block w-full rounded-md border-0 bg-white/5 py-2.5 px-3.5 text-white shadow-sm ring-1 ring-inset ring-white/10 placeholder:text-slate-500 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6 transition-all duration-200"
                                    placeholder="John Doe">
                            </div>
                        </div>

                        <!-- Email -->
                        <div>
                            <label for="email" class="block text-sm font-medium leading-6 text-white">Email</label>
                            <div class="mt-2">
                                <input type="email" name="contact[email]" id="email" autocomplete="email" required
                                    class="block w-full rounded-md border-0 bg-white/5 py-2.5 px-3.5 text-white shadow-sm ring-1 ring-inset ring-white/10 placeholder:text-slate-500 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6 transition-all duration-200"
                                    placeholder="you@example.com">
                            </div>
                        </div>

                        <!-- Subject -->
                         <div>
                            <label for="subject" class="block text-sm font-medium leading-6 text-white">Subject</label>
                            <div class="mt-2">
                                <input type="text" name="contact[subject]" id="subject" required
                                    class="block w-full rounded-md border-0 bg-white/5 py-2.5 px-3.5 text-white shadow-sm ring-1 ring-inset ring-white/10 placeholder:text-slate-500 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6 transition-all duration-200"
                                    placeholder="How can we help?">
                            </div>
                        </div>

                        <!-- Message -->
                        <div>
                            <label for="message" class="block text-sm font-medium leading-6 text-white">Message</label>
                            <div class="mt-2">
                                <textarea name="contact[message]" id="message" rows="4" required
                                    class="block w-full rounded-md border-0 bg-white/5 py-2.5 px-3.5 text-white shadow-sm ring-1 ring-inset ring-white/10 placeholder:text-slate-500 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6 transition-all duration-200"
                                    placeholder="Tell us a little about your issue..."></textarea>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div>
                            <button type="submit" 
                                class="flex w-full justify-center rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-colors duration-200">
                                Send message
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </main>
</div>