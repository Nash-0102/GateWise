<% layout('layouts/layout') %>
<% locals.title = 'Edit Alert' %>

<!-- Main Content Area -->
<main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8 w-full">



    <div class="mb-6">
            <a href="/" class="inline-flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-white transition-colors group">
                <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Dashboard
            </a>
        </div>

    <!-- Form Container Card -->
    <div class="max-w-2xl mx-auto glass-card rounded-2xl overflow-hidden shadow-card-dark">
        
        <!-- Form Header -->
        <div class="p-6 md:p-8 border-b border-white/10 bg-gradient-to-r from-dark-card/50 to-transparent">
            <div class="flex items-center space-x-3 mb-2">
                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-red-500 to-orange-600 flex items-center justify-center shadow-lg shadow-red-500/30">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-gray-100">Edit Alert</h2>
            </div>
            <p class="mt-2 text-gray-400">Make your changes to the alert below.</p>
        </div>

        <!-- Form Body -->
        <form action="/alerts/<%= alertdata._id %>?_method=PUT" method="post" class="p-6 md:p-8 space-y-6">
            
            <!-- Alert Title -->
            <div>
                <label for="title" class="block text-sm font-semibold text-gray-300 mb-2 flex items-center space-x-2">
                    <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                    </svg>
                    <span>Alert Title</span>
                </label>
                <input 
                    type="text" 
                    id="title"
                    name="alertdata[title]" 
                    value="<%= alertdata.title %>"
                    class="w-full px-4 py-3 bg-dark-surface/50 border border-white/10 rounded-xl text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-red-500/50 focus:border-red-500/50 transition-all duration-300 hover:border-red-500/30"
                    required
                >
            </div>

            <!-- Alert Description -->
            <div>
                <label for="description" class="block text-sm font-semibold text-gray-300 mb-2 flex items-center space-x-2">
                    <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
                    </svg>
                    <span>Description</span>
                </label>
                <textarea 
                    id="description"
                    name="alertdata[description]" 
                    rows="6"
                    class="w-full px-4 py-3 bg-dark-surface/50 border border-white/10 rounded-xl text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-red-500/50 focus:border-red-500/50 transition-all duration-300 hover:border-red-500/30 resize-none"
                    required
                ><%= alertdata.description %></textarea>
            </div>
            
            <!-- Submit Button -->
            <div class="pt-4">
                <button 
                    type="submit"
                    class="w-full neon-button bg-gradient-to-r from-red-500 to-orange-600 hover:from-orange-600 hover:to-red-500 text-white font-semibold py-3 px-6 rounded-xl shadow-lg shadow-red-500/30 hover:shadow-red-500/50 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-dark-bg transition-all duration-300 flex items-center justify-center space-x-2"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span>Update Alert</span>
                </button>
            </div>
        </form>

        <!-- Back link -->
        <div class="px-6 py-4 border-t border-white/10 bg-dark-surface/50 text-center">
            <a href="/alerts" class="inline-flex items-center space-x-2 text-sm font-medium text-gray-400 hover:text-red-400 transition-colors duration-300">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                <span>Cancel and go back</span>
            </a>
        </div>
    </div>

</main>