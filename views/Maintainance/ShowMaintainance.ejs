<% layout('layouts/layout') %>
<% locals.title = maintainData.title %>

<!-- Main Content Area -->
<main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8 w-full">




    <div class="mb-6">
            <a href="/" class="inline-flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-white transition-colors group">
                <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Dashboard
            </a>
        </div>

    <!-- Details Container Card -->
    <div class="max-w-2xl mx-auto glass-card rounded-2xl overflow-hidden shadow-card-dark">
        
        <!-- Card Header -->
        <div class="p-6 md:p-8 border-b border-white/10 bg-gradient-to-r from-dark-card/50 to-transparent">
            <div class="flex items-start space-x-4">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/30 flex-shrink-0">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                </div>
                <div class="flex-1 min-w-0">
                    <h1 class="text-3xl font-bold text-gray-100 mb-2">
                        <%= maintainData.title %>
                    </h1>
                    <div class="flex items-center space-x-2 text-sm text-gray-400">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>Maintenance Details</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Card Body -->
        <div class="p-6 md:p-8">
            
            <!-- Meta Info Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
                <!-- Location -->
                <div class="glass-card rounded-xl p-4 border border-white/10">
                    <div class="flex items-center space-x-2 mb-2">
                        <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <h4 class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Location</h4>
                    </div>
                    <p class="text-gray-200 text-base font-semibold">
                        <%= maintainData.location %>
                    </p>
                </div>
                
                <!-- Cost -->
                <div class="glass-card rounded-xl p-4 border border-white/10">
                    <div class="flex items-center space-x-2 mb-2">
                        <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <h4 class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Cost</h4>
                    </div>
                    <p class="text-gray-200 text-base font-semibold">
                        â‚¹<%= maintainData.cost %>
                    </p>
                </div>
            </div>

            <!-- Date Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
                <!-- Scheduled Date -->
                <div class="glass-card rounded-xl p-4 border border-white/10">
                    <div class="flex items-center space-x-2 mb-2">
                        <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <h4 class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Scheduled Date</h4>
                    </div>
                    <p class="text-gray-200 text-base">
                        <%= maintainData.ScheduleDate ? new Date(maintainData.ScheduleDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : 'Not set' %>
                    </p>
                </div>
                
                <!-- Completed Date -->
                <div class="glass-card rounded-xl p-4 border border-white/10">
                    <div class="flex items-center space-x-2 mb-2">
                        <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <h4 class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Completed Date</h4>
                    </div>
                    <p class="text-gray-200 text-base">
                        <%= maintainData.CompletedDate ? new Date(maintainData.CompletedDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : 'Not completed' %>
                    </p>
                </div>
            </div>

            <!-- Description -->
            <div>
                <div class="flex items-center space-x-2 mb-3">
                    <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
                    </svg>
                    <h4 class="text-sm font-semibold text-gray-400 uppercase tracking-wider">Description</h4>
                </div>
                <div class="glass-card rounded-xl p-5 border border-white/10">
                    <p class="text-gray-200 text-base leading-relaxed whitespace-pre-wrap"><%= maintainData.description %></p>
                </div>
            </div>
        </div>

        <!-- Card Footer with Actions -->
        <div class="px-6 py-5 border-t border-white/10 bg-dark-surface/50 flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0 gap-4">
            
            <!-- Back Link -->
            <a href="/maintains" class="inline-flex items-center space-x-2 text-sm font-medium text-gray-400 hover:text-amber-400 transition-colors duration-300">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                <span>Back to all maintenance</span>
            </a>

            <!-- Action Buttons -->
            <div class="flex items-center space-x-3">
                
                <!-- Edit Button -->
                 <%if(currUser && currUser.role==="Secretary"){ %>
                <a 
                    href="/maintains/<%= maintainData._id%>/edit"
                    class="inline-flex items-center space-x-2 bg-gradient-to-r from-neon-blue to-neon-violet hover:from-neon-violet hover:to-neon-blue text-white font-semibold py-2.5 px-5 rounded-xl shadow-lg shadow-neon-blue/30 hover:shadow-neon-violet/50 transition-all duration-300"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    <span>Edit</span>
                </a>
                <% } %>
                
                <!-- Delete Button -->
                 <%if(currUser && currUser.role==="Secretary"){ %>
                <form action="/maintains/<%= maintainData._id%>?_method=DELETE" method="post" class="inline-block">
                    <button 
                        type="submit"
                        class="inline-flex items-center space-x-2 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-600 text-white font-semibold py-2.5 px-5 rounded-xl shadow-lg shadow-red-600/30 hover:shadow-red-600/50 transition-all duration-300"
                        onclick="return confirm('Are you sure you want to delete this maintenance record? This action cannot be undone.');"
                    >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        <span>Delete</span>
                    </button>
                </form>
                <% } %>

            </div>
        </div>
    </div>

</main>